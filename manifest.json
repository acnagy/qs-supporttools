{
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "answerChat": {
            "description": "Answer Zopim Chat",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+0"
            }
        },
        "copyTicketNumber": {
            "description": "Copy Zendesk ticket number",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+9"
            }
        }
    },
    "content_scripts": [
        {
            "js": [
                "contentscript.js",
                "jqeury.min.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "description": "Find prospect sales users on Zopim with an Omnibar button and answer chats from anywhere with Cntl/Command+Shift+0. Copy current Zendesk/Assembla ticket number with Cntl/Command+Shift+9.",
    "icons": {
        "128": "images/icon.png"
    },
    "manifest_version": 2,
    "name": "QuickSchools Support Tools",
    "page_action": {
        "default_icon": "images/icon.png",
        "default_title": "QuickSchools Support Tools"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "clipboardWrite"
    ],
    "version": "1.3"
}
