{
  "name": "QuickSchools Support Tools",
  
  "commands": {
      "answerChat": {
        "suggested_key": {
          "default": "Ctrl+Shift+A"
        },
        "description": "Answer Zopim Chat"
      }
  },
  "description": "Find prospect sales users on Zopim with an omnibar button and answer chats with cntl/cmd-shift-a",
  "version": "1.1",
  "icons" : {"128" : "icon.png"},
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_title": "QuickSchools Support Tools",
	"default_icon": "icon.png"
  },
  "manifest_version": 2,
  "permissions" : [
	  "tabs",
	  "storage"
  ],
  "content_scripts" : [
	  {
	      "matches" : [
	        "http://*/*",
	        "https://*/*"
	      ],
		  "js" : ["contentscript.js"]
	  }
  ]
}
