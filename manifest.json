{
  "name": "QuickSchools Prospect Finder",
  "description": "Parse the Zopim Dashboard and the Customer Outreach reports on Control to find potential sales prospects to engage via chat.",
  "version": "1.1",
  "icons" : {"128" : "icon.png"},
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_title": "QuickSchools Prospect School Finder",
	"default_icon": "icon.png"
  },
  "manifest_version": 2,
  "permissions" : [
	  "tabs",
	  "storage"
  ],
  "content_scripts" : [
	  {
	      "matches" : [
	        "http://*/*",
	        "https://*/*"
	      ],
		  "js" : ["contentscript.js"]
	  }
  ]
}
