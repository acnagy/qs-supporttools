{
    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "answerChat": {
            "description": "Answer Zopim Chat",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+0"
            }
        },
        "copyTicketNumber": {
            "description": "Copy Zendesk ticket number",
            "global": true,
            "suggested_key": {
                "default": "Ctrl+Shift+9"
            }
        }
    },
    "content_scripts": [
        {
            "js": [
                "qs-supporttools.js",
                "libraries/jquery.js",
                "qs-supporttools-bootstrap.js",
                "chatbubbles.js"
            ],
            "css": [
                "chatbubbles.css"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "description": "Tools to make life easier for QuickSchools Support Engineers by automating common tasks.",
    "icons": {
        "128": "images/icon.png"
    },
    "manifest_version": 2,
    "name": "QuickSchools Support Tools",
    "page_action": {
        "default_icon": "images/icon.png",
        "default_title": "QuickSchools Support Tools"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "clipboardWrite",
        "activeTab"
    ],
    "short_name": "QS Tools",
    "version": "1.33.3",
    "web_accessible_resources": [
        "injectScripts.js",
        "QSIterator.js",
    		"QSTableIterator.js",
        "QSZeusIterator.js",
        "QSGradebookIterator.js",
        "QSScraper.js",
        "QSImporter.js",
        "CSVWriter.js",
        "extend.js",
        "libraries/json2csv.js"
    ]
}
